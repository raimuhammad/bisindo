{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "views/compiled",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "@admin-routes": ["views/routes/admin.ts"],
      "@root/*": ["views/*"],
      "@components/*": ["views/components/*"],
      "@guest-page": ["views/pages/guest/index.ts"],
      "@hooks/*": ["views/hooks/*"],
      "@layout/*": ["views/layout/*"],
      "@models/*": ["views/models/*"],
      "@model": ["views/models"],
      "@providers/*": ["views/providers/*"],
      "@service-provider/*": ["views/providers/service-provider/*"],
      "@shared/*": ["views/shared/*"],
      "@pages/*": ["views/pages/*"],
      "@utils/*": ["views/utils/*"],
      "@services/*": ["views/services/*"],
      "@root-model": ["views/models/RootStore.base.ts"]
    }
  },
  "include": ["views"],
  "exclude": ["views/compiled", "node_modules", "vitejs"]
}
